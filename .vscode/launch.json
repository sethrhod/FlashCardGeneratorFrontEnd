{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Custom Local Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/create-local-server.js",
      "runtimeArgs": ["--inspect"],
      "env": {
        "NODE_ENV": "development",
        "PORT": "3000"
      },
      "console": "integratedTerminal",
      "skipFiles": ["<node_internals>/**"]
    }
  ]
}